{
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "warn",
    "eqeqeq": "error",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "no-empty": ["error", { "allowEmptyCatch": false }],
    "no-empty-function": ["warn", { "allow": ["arrowFunctions"] }],
    "require-await": "warn",
    "no-throw-literal": "error",
    "default-case": "error"
  }
}
